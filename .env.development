# =============================================================================
# TALK LIVE APPLICATION - DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Frontend URL (for CORS and Socket.io)
FRONTEND_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.io Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_TRANSPORT=websocket,polling

# Logging
LOG_LEVEL=debug

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Configuration
VITE_API_URL=http://localhost:3001

# Development Settings
VITE_DEV_MODE=true
VITE_NODE_ENV=development

# WebRTC Configuration
VITE_WEBRTC_DEBUG=true
VITE_WEBRTC_LOGGING=true

# Application Configuration
VITE_APP_NAME=Talk Live (Dev)
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Anonymous P2P Voice Chat Application

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Security Configuration
VITE_ENABLE_CSP=false
VITE_ENABLE_HTTPS_REDIRECT=false
VITE_ENABLE_HSTS=false

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=false
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# UI Configuration
VITE_THEME_MODE=auto
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_SOUNDS=true

# Development Tools (enabled in development)
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_DEBUG_PANEL=true

# Build Configuration
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAPS=true
VITE_BUILD_MINIFY=false
VITE_BUILD_TARGET=esnext 